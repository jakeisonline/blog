---
import BaseLayout from "@/layouts/base-layout.astro"

interface Props {
  frontmatter: Record<string, string>
  title?: string
  description?: string
}

const {
  frontmatter,
  title = frontmatter?.title,
  description = frontmatter?.description,
} = Astro.props
---

<BaseLayout>
  <article class="prose prose-lg">
    <h1>{title}</h1>
    <slot />
  </article>
</BaseLayout>
