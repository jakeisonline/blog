---
import { cn } from "@/lib/utils"
import { cva } from "class-variance-authority"
import {
  CircleAlert,
  Info,
  Lightbulb,
  OctagonAlert,
  ShieldAlert,
} from "lucide-astro"

interface Props {
  type: "note" | "tip" | "important" | "warning" | "caution"
  title?: string
}

const defaultType = "note"
const { type = defaultType, title }: Props = Astro.props

const typeStyles = cva("", {
  variants: {
    type: {
      note: "border-blue-400 bg-blue-400/10",
      tip: "border-emerald-400 bg-emerald-400/10",
      important: "border-purple-400 bg-purple-400/10",
      warning: "border-yellow-400 bg-yellow-400/10",
      caution: "border-red-400 bg-red-400/10",
    },
  },
  defaultVariants: {
    type: defaultType,
  },
})

const iconStyles = cva("", {
  variants: {
    icon: {
      note: "stroke-blue-400",
      tip: "stroke-emerald-400",
      important: "stroke-purple-400",
      warning: "stroke-yellow-400",
      caution: "stroke-red-400",
    },
  },
  defaultVariants: {
    icon: defaultType,
  },
})

const icons: Record<Props["type"], any> = {
  note: Info,
  tip: Lightbulb,
  important: CircleAlert,
  warning: ShieldAlert,
  caution: OctagonAlert,
}

const Icon = icons[type]
---

<aside
  class={cn(
    "-mx-4 border-l-4 rounded-r-sm px-3 pt-4.5 pb-0.5 text-sm mb-8",
    typeStyles({ type }),
  )}
>
  <div class="-mb-2 flex items-center gap-1.5">
    <Icon class={cn("size-4", iconStyles({ icon: type }))} />
    {title && <strong class="text-sm font-bold">{title}</strong>}
  </div>
  <slot />
</aside>
